<nav aria-label="breadcrumb" class="mt-3">
  <ol class="breadcrumb">
    <li class="breadcrumb-item"><%= link_to "Trang chủ", root_path %></li>
    <li class="breadcrumb-item"><%= link_to "Quản lý Danh mục", group_categories_path %></li>
<!--    <li class="breadcrumb-item active" aria-current="page"><%#= @group_category.name %></li>-->
  </ol>
</nav>

<div class="card">
  <h5 class="card-header">
<!--    Danh mục của <%#= @group_category.name %>-->
  </h5>
  <div class="card-body">
    <table class="table table-bordered">
      <thead>
      <tr>
        <th scope="col">ID</th>
        <th scope="col">Name</th>
        <th scope="col">Action</th>
      </tr>
      </thead>
      <tbody>
      <% nested_set_options(@group_category.categories.where(parent_id: nil)) do |item| %>
        <tr>
          <td><%= item.id %></td>
          <td><%= "#{'>>' * item.level} #{item.name}" %></td>
          <td>
          <td><%= link_to  "Edit",edit_group_category_category_path(@group_category, item) %></td>
          <td><%= link_to "Delete",group_category_category_path(@group_category, item), method: :delete, data: {confirm: "Are you sure?"} %></td>
          </td>
        </tr>
      <% end %>
      </tbody>
    </table>

    <%= link_to "Thêm mới", new_group_category_category_path(@group_category), class: "btn btn-success" %>
  </div>
</div>