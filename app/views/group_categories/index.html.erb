<nav aria-label="breadcrumb" class="mt-3">
  <ol class="breadcrumb">
    <li class="breadcrumb-item"><%= link_to "Trang chủ", root_path %></li>
    <li class="breadcrumb-item active" aria-current="page">Quản lý Danh mục</li>
  </ol>
</nav>

<div class="card">
  <h5 class="card-header">
    Nhóm Danh mục
  </h5>
  <div class="card-body">
    <table class="table table-bordered">
      <thead>
      <tr>
        <th scope="col">#</th>
        <th scope="col">Name</th>
        <th scope="col">Action</th>
      </tr>
      </thead>
      <tbody>
      <% @group_categories.each do |category| %>
        <tr>
          <td><%= link_to category.id, group_category_categories_path(category) %></td>
          <td><%= link_to category.name, group_category_categories_path(category) %></td>
<!--          <td><%#= link_to "Delete",group_categories_path(category), method: :delete, data: {confirm: "Are you sure?"} %></td>-->
          <td><%= link_to "Delete", group_category_path(category), method: :delete, data: {confirm: "Are you sure?"} %></td>
        </tr>
      <% end %>
      </tbody>
    </table>
<!--    <div><%#= will_paginate @group_categories, renderer: WillPaginate::ActionView::BootstrapLinkRenderer %></div>-->

    <%= link_to "Thêm mới", new_group_category_path, class: "btn btn-success" %>
  </div>
</div>